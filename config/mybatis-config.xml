<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<typeAlias type="org.lysty.dao.Song" alias="Song" />
		<typeAlias type="org.lysty.dao.HistoryStatRecord" alias="HistoryStatRecord" />
		<typeAlias type="org.lysty.dao.HistoryEntry" alias="HistoryEntry" />
	</typeAliases>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="org.h2.Driver" />
				<property name="url" value="jdbc:h2:file:${db_dir}/lystydb.db;" />
				<!-- <property name="url" value="jdbc:h2:tcp://localhost/~/test;AUTO_SERVER=TRUE" 
					/> -->
				<property name="username" value="sa" />
				<property name="password" value="" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="org/lysty/db/DBMapper.xml" />
	</mappers>
</configuration>